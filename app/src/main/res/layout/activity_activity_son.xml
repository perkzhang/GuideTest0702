<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.perk.guidetest0702.ActivitySon">


    <RelativeLayout
        android:id="@+id/lin_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f3f3f3">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子界面"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:id="@+id/tv_detail"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_titlebar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/text_line1"
            android:background="#f3f3f3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView

            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_username"
            android:id="@+id/image_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_photo"
            android:layout_toEndOf="@+id/image_photo" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_name"
            android:layout_toEndOf="@+id/txt_name"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:hint="请输入用户名称" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_user_no"
            android:id="@+id/image_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/txt_usernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户编号"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_icon"
            android:layout_toEndOf="@+id/image_icon" />

        <EditText
            android:id="@+id/edit_userno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_usernum"
            android:layout_toEndOf="@+id/txt_usernum"
            android:layout_marginLeft="16dp"
            android:singleLine="true"

            android:hint="请输入用户编号" />

        <TextView
            android:id="@+id/text_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3"
            android:layout_alignBottom="@+id/image_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_addinfo"
            android:layout_toEndOf="@+id/text_addinfo"
            android:layout_marginLeft="16dp"
            android:singleLine="true"

            android:hint="请输入地址" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_address"
            android:id="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/text_addinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址信息"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"
            android:id="@+id/but_located"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_lockno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_locknum"
            android:layout_toEndOf="@+id/text_locknum"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:hint="请输入仪表编号" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_device_no"
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/text_locknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仪表编号"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_picture"
            android:id="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/text_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="施封照片"
            android:textSize="17sp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="17dp" />

        <ImageView
            android:id="@+id/image_takephoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_action_camera_normal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击拍照"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_takephoto"
            android:layout_toEndOf="@+id/image_takephoto"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_device_type"
            android:id="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备类型"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/but_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="入库"
        android:textSize="19sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#4fc0e8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ScrollView
        android:id="@+id/sv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示信息"
            android:id="@+id/tv_display"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </ScrollView>


    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_item_device_type"
            android:id="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备位置"
            android:textSize="17sp"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5" />

        <TextView
            android:id="@+id/tv_nfc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f3f3f3"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="读卡"
            android:src="@drawable/ic_read_nfc"
            android:id="@+id/image_read_nfc"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</RelativeLayout>
